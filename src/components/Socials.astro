---
import { Icon } from "astro-icon/components";
import 'cooltipz-css';

const links = {
  "tiktok": "https://www.tiktok.com/@Julesen",
  "kick": "https://kick.com/julesen",
  "instagram": "#",
  "youtube": "https://youtube.com/@julesen7373",
  "discord": "https://discord.com/invite/xnJNWJcgTJ",
}
---
<section>
  <div id="socials">
    <a href={links.tiktok} target="_blank" class="link cooltipz--top" aria-label="TikTok"><Icon name="tiktok" class="icon" /></a>
    <a href={links.kick} target="_blank" class="link cooltipz--top" aria-label="Kick"><Icon name="kick" class="icon" /></a>
    <a href={links.instagram} target="_blank" class="link cooltipz--top" aria-label="Instagram"><Icon name="instagram" class="icon" /></a>
    <a href={links.youtube} target="_blank" class="link cooltipz--top" aria-label="YouTube"><Icon name="youtube" class="icon" /></a>
    <a href={links.discord} target="_blank" class="link cooltipz--top" aria-label="Discord"><Icon name="discord" class="icon" /></a>
  </div>
</section>

<style>
  #socials {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
    margin: 7em auto 14em;
    max-width: 80%
  }
  a {
    color: inherit;
  }
  .icon {
    min-height: 100px;
    width: auto;
    max-width: 100px;
    color: var(--secondary);
    margin: 2em;
    transition: color .3s ease;
  }
  .icon:hover, .icon:active {
    color: var(--primary);
  }
</style>